<merge xmlns:latin="http://schemas.android.com/apk/res-auto">
    <!-- Because the font rendering system prior to API version 16 can't automatically
         render dotted circle for incomplete combining letter of some scripts, different
         set of Key definitions are needed based on the API version. -->
    <include latin:keyboardLayout="@xml/keystyle_gurmukhi_vowel_sign_o" />
    <Key latin:keyStyle="baseKeyGurmukhiVowelSignO" />
    <!-- Because the font rendering system prior to API version 16 can't automatically
         render dotted circle for incomplete combining letter of some scripts, different
         set of Key definitions are needed based on the API version. -->
    <include latin:keyboardLayout="@xml/keystyle_gurmukhi_vowel_sign_e" />
    <Key latin:keyStyle="baseKeyGurmukhiVowelSignE" />
    <!-- Because the font rendering system prior to API version 16 can't automatically
         render dotted circle for incomplete combining letter of some scripts, different
         set of Key definitions are needed based on the API version. -->
    <include latin:keyboardLayout="@xml/keystyle_gurmukhi_sign_virama" />
    <Key latin:keyStyle="baseKeyGurmukhiSignVirama" />
    <!-- Because the font rendering system prior to API version 16 can't automatically
         render dotted circle for incomplete combining letter of some scripts, different
         set of Key definitions are needed based on the API version. -->
    <include latin:keyboardLayout="@xml/keystyle_gurmukhi_vowel_sign_i" />
    <Key latin:keyStyle="baseKeyGurmukhiVowelSignI" />
    <!-- Because the font rendering system prior to API version 16 can't automatically
         render dotted circle for incomplete combining letter of some scripts, different
         set of Key definitions are needed based on the API version. -->
    <include latin:keyboardLayout="@xml/keystyle_gurmukhi_vowel_sign_u" />
    <Key latin:keyStyle="baseKeyGurmukhiVowelSignU" />
    <!-- U+0A2A: "ਪ" GURMUKHI LETTER PA -->
    <Key
        latin:keySpec="&#x0A2A;"
        latin:moreKeys="&#x0A2B;" />
    <!-- U+0A30: "ਰ" GURMUKHI LETTER RA -->
    <Key
        latin:keySpec="&#x0A30;"
        latin:moreKeys="&#x0A5C;" />
    <!-- U+0A15: "ਕ" GURMUKHI LETTER KA -->
    <Key
        latin:keySpec="&#x0A15;"
        latin:moreKeys="&#x0A16;" />
    <!-- U+0A24: "ਤ" GURMUKHI LETTER TA -->
    <Key
        latin:keySpec="&#x0A24;"
        latin:moreKeys="&#x0A25;" />
</merge>