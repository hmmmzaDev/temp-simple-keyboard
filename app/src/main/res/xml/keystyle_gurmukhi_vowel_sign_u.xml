<merge xmlns:latin="http://schemas.android.com/apk/res-auto">
    <switch>
        <case latin:keyboardLayoutSet="gurmukhi">
            <!-- U+0A41/U+0A02: "ੁਂ" GURMUKHI VOWEL SIGN U/GURMUKHI SIGN BINDI
                 U+0A41/U+0A70: "ੁੰ" GURMUKHI VOWEL SIGN U/GURMUKHI TIPPI -->
            <key-style
                latin:styleName="moreKeysGurmukhiVowelSignU"
                latin:moreKeys="&#x0A41;&#x0A02;,&#x0A41;&#x0A70;" />
        </case>
        <case latin:keyboardLayoutSet="gurmukhi_compact">
            <!-- U+0A41: "ੁ" GURMUKHI VOWEL SIGN U -->
            <key-style
                latin:styleName="moreKeysGurmukhiVowelSignU"
                latin:moreKeys="&#x0A41;" />
        </case>
        <default>
            <key-style latin:styleName="moreKeysGurmukhiVowelSignU" />
        </default>
    </switch>
    <!-- U+0A41: "ੁ" GURMUKHI VOWEL SIGN U -->
    <key-style
        latin:styleName="baseKeyGurmukhiVowelSignU"
        latin:parentStyle="moreKeysGurmukhiVowelSignU"
        latin:keySpec="&#x0A41;" />
</merge>