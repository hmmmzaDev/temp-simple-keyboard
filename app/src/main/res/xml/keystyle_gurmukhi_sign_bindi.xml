<merge xmlns:latin="http://schemas.android.com/apk/res-auto">
    <switch>
        <case latin:keyboardLayoutSet="gurmukhi_compact">
            <!-- U+0A70: "ੰ" GURMUKHI TIPPI
                 U+0A03: "ਃ" GURMUKHI SIGN VISARGA -->
            <key-style
                latin:styleName="moreKeysGurmukhiSignBindi"
                latin:moreKeys="&#x0A70;,&#x0A03;" />
        </case>
        <default>
            <key-style latin:styleName="moreKeysGurmukhiSignBindi" />
        </default>
    </switch>
    <!-- U+0A02: "ਂ" GURMUKHI SIGN BINDI -->
    <key-style
        latin:styleName="baseKeyGurmukhiSignBindi"
        latin:parentStyle="moreKeysGurmukhiSignBindi"
        latin:keySpec="&#x0A02;" />
</merge>