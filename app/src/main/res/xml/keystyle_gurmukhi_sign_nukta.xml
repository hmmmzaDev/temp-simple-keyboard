<merge xmlns:latin="http://schemas.android.com/apk/res-auto">
    <switch>
        <case latin:keyboardLayoutSet="gurmukhi">
            <!-- Common nukta combinations for borrowed sounds -->
            <key-style
                latin:styleName="moreKeysGurmukhiSignNukta"
                latin:moreKeys="&#x0A16;&#x0A3C;,&#x0A17;&#x0A3C;,&#x0A1C;&#x0A3C;,&#x0A2B;&#x0A3C;" />
        </case>
        <case latin:keyboardLayoutSet="gurmukhi_compact">
            <!-- U+0A3C: "਼" GURMUKHI SIGN NUKTA -->
            <key-style
                latin:styleName="moreKeysGurmukhiSignNukta"
                latin:moreKeys="&#x0A3C;" />
        </case>
        <default>
            <key-style latin:styleName="moreKeysGurmukhiSignNukta" />
        </default>
    </switch>
    <!-- U+0A3C: "਼" GURMUKHI SIGN NUKTA -->
    <key-style
        latin:styleName="baseKeyGurmukhiSignNukta"
        latin:parentStyle="moreKeysGurmukhiSignNukta"
        latin:keySpec="&#x0A3C;" />
</merge>