<merge xmlns:latin="http://schemas.android.com/apk/res-auto">
    <switch>
        <case latin:keyboardLayoutSet="gurmukhi">
            <!-- U+0A3F/U+0A02: "ਿਂ" GURMUKHI VOWEL SIGN I/GURMUKHI SIGN BINDI -->
            <key-style
                latin:styleName="moreKeysGurmukhiVowelSignI"
                latin:moreKeys="&#x0A3F;&#x0A02;" />
        </case>
        <case latin:keyboardLayoutSet="gurmukhi_compact">
            <!-- U+0A3F: "ਿ" GURMUKHI VOWEL SIGN I -->
            <key-style
                latin:styleName="moreKeysGurmukhiVowelSignI"
                latin:moreKeys="&#x0A3F;" />
        </case>
        <default>
            <key-style latin:styleName="moreKeysGurmukhiVowelSignI" />
        </default>
    </switch>
    <!-- U+0A3F: "ਿ" GURMUKHI VOWEL SIGN I -->
    <key-style
        latin:styleName="baseKeyGurmukhiVowelSignI"
        latin:parentStyle="moreKeysGurmukhiVowelSignI"
        latin:keySpec="&#x0A3F;" />
</merge>