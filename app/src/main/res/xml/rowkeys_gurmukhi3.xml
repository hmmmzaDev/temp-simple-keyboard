<merge xmlns:latin="http://schemas.android.com/apk/res-auto">
    <switch>
        <case latin:keyboardLayoutSetElement="alphabetManualShifted|alphabetShiftLocked">
            <!-- Z X C V B N M → ਟ ਞ ਚ ਵ ਬ ਨ ਮ -->
            <Key latin:keySpec="&#x0A1F;" />
            <Key latin:keySpec="&#x0A1E;" />
            <Key latin:keySpec="&#x0A1A;" />
            <Key latin:keySpec="&#x0A35;" />
            <Key latin:keySpec="&#x0A2C;" />
            <Key latin:keySpec="&#x0A28;" />
            <Key latin:keySpec="&#x0A2E;" />
        </case>
        <default>
            <!-- Z X C V B N M → ਟ ਞ ਚ ਵ ਬ ਨ ਮ -->
            <Key latin:keySpec="&#x0A1F;" />
            <Key latin:keySpec="&#x0A1E;" />
            <Key latin:keySpec="&#x0A1A;" />
            <Key latin:keySpec="&#x0A35;" />
            <Key latin:keySpec="&#x0A2C;" />
            <Key latin:keySpec="&#x0A28;" />
            <Key latin:keySpec="&#x0A2E;" />
        </default>
    </switch>
</merge>
