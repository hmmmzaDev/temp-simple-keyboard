<merge xmlns:latin="http://schemas.android.com/apk/res-auto">
    <switch>
        <case latin:keyboardLayoutSet="gurmukhi_compact">
            <!-- U+0A4D: "੍" GURMUKHI SIGN VIRAMA -->
            <key-style
                latin:styleName="moreKeysGurmukhiSignVirama"
                latin:moreKeys="&#x0A4D;" />
        </case>
        <default>
            <key-style latin:styleName="moreKeysGurmukhiSignVirama" />
        </default>
    </switch>
    <!-- U+0A4D: "੍" GURMUKHI SIGN VIRAMA -->
    <key-style
        latin:styleName="baseKeyGurmukhiSignVirama"
        latin:parentStyle="moreKeysGurmukhiSignVirama"
        latin:keySpec="&#x0A4D;" />
</merge>